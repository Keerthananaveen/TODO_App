{
  "compilerOptions": {
    "target": "ES2022",                 
    "module": "NodeNext",               
    "moduleResolution": "NodeNext",     
    "outDir": "dist",                   
    "rootDir": ".",                      
    "strict": true,                       
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                
    "verbatimModuleSyntax": true,        
    "types": ["node"]                   
  },
  "include": ["src", "prisma"],          
  "exclude": ["dist", "node_modules"]   
}
